@model DDD.Domain.Models.User

<h1>User's information</h1>

<div>
    <hr />
    <input type="hidden" asp-for="UserId" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Icon != null)
            {
                <img src="data:image/png;base64,@(System.Convert.ToBase64String(Model.Icon))" width="70" height="70" />
            }
            else
            {
                <div>Not set.</div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelfIntroduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelfIntroduction)
        </dd>
    </dl>
</div>
<div class="d-flex">
    <a asp-action="index" asp-controller="Test" asp-route-id="@Model.UserId">Show questions this user created</a>
    @if (Model.UserId == int.Parse(@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value))
    {
        <div>&nbsp;|&nbsp;</div>
        <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a>
    }
</div>
