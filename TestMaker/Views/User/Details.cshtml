@model TestMaker.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <input type="hidden" asp-for="UserId" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/png;base64,@(System.Convert.ToBase64String(Model.Icon))" width="70" height="70" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelfIntroduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelfIntroduction)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="index" asp-controller="Test" asp-route-id="@Model.UserId">Show questions this user created</a> |
    <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a>
</div>
